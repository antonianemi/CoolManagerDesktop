<UserControl x:Class="CoolManager.MSGControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="850" Height="520">

    <Grid Background="#7F000000">
        <Grid Background="#FF1187EA" Margin="207,154,231,197" >
            <Label x:Name="Title" Content="MESSSAGE" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="282" FontFamily="Segoe UI Light" FontSize="24" Margin="55,5,0,0" HorizontalContentAlignment="Center">
                <Label.Foreground>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Label.Foreground>
            </Label>
            <Button Margin="130,124,146,10" Content="OK" Click="ButtonOk_Click"  Background="Silver" Foreground="Black" ForceCursor="True" />
            <TextBlock x:Name="MessageBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Message here!" VerticalAlignment="Center" Width="383" Height="61" Foreground="White" FontSize="18" FontFamily="Segoe UI Light" Margin="19,58,0,50"/>
       </Grid>
    </Grid>
</UserControl>
